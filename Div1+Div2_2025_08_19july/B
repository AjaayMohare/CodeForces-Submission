#include <bits/stdc++.h>
using namespace std;

// cdiv 2 question 2
int main() {
     ios::sync_with_stdio(false);
 cin.tie(nullptr);
 int t;
 cin >> t;
 while(t--){
     int n;
     cin >> n;
 
        long long ans = 0;
 
     for(int i=0;i<n;i++)
         {long long a1, b1, a2, b2;
         
         
                    cin >> a1 >> b1 >> a2 >> b2;
                if(a1 > a2 && b1 > b2){
             ans = ans + a1 - a2;
             
             
             
                  
                ans = ans + a2 + b1 - b2;
                
                
                
           
                    }
              else if(a1 > a2){
                     ans = ans + a1 - a2;
         }
                  else  if(b1 > b2){
                      
                      
             ans = ans + a1 + b1 - b2;
        
         }}
         
     
 
     
          cout << ans << endl;
 }
}
