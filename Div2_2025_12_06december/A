#include <bits/stdc++.h>
using namespace std;


int main() {
	// your code goes here
    int t;
    cin >> t;
    while(t--){
    int n, k;
    string s;
    cin >> n >> k >> s;
 
    int b = 0;
    int ans = 0;
 
    for(int i = 1; i <= n; i++){
        if(s[i-1] == '1'){
            b = max(b, i + k);
        }
       
        else if(b < i ){
                ans++;
        }
    }
    cout << ans<< endl;
    }
}
