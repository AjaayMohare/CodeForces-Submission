#include <bits/stdc++.h>
using namespace std;
 
int main(){
    
    int t;
    cin >> t;
    while(t--){
        int n;
        cin >> n;
 
        vector<int> a(n);
        vector<int> b(n);
 
        for(int i = 0; i < n; i++){
            cin >> a[i];
        }
        for(int i = 0; i < n; i++){
            cin >> b[i];
        }
 
        long long s1 = 0;                
        long long s2 = LLONG_MIN / 4;    
 
        for(int i = n-1; i >=0; i--){   
            long long x = s1, y = s2;
            s1 = max(-a[i] + x, -b[i] + y);
            s2 = max( a[i] + y,  b[i] + x);
        }
 
        cout << max(s1, s2) << endl;
    }
}
