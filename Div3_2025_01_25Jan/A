#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	int t;
	cin >> t;
	while(t--){
	    int n,s,x;
	    cin >> n >> s >> x;
	    vector<int> v(n);
	    int sum = 0;
	    map<int,int> m;
	    
	    for(int i=0;i<n;i++) {
	        cin >> v[i];
	        m[v[i]]++;
	        sum+=v[i];
	    }
	    
        if(sum>s) cout << "no" << endl;
        else if(sum==s) cout << "yes" << endl;
        else{
            int diff = s - sum;
            if(diff>=x){
                if(diff%x==0) cout << "yes" << endl;
                else cout << "no" << endl;
            }
            else{
                cout << "no" << endl;
            }
        }
	}
 
}
