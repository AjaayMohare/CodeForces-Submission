#include <bits/stdc++.h>
using namespace std;
 
int main() {
int t;
cin >> t;
while(t--){
    int n;
    cin >> n;
    vector<int > v(n);
   long long s=0;
    for(int i=0;i<n;i++){
        cin >> v[i];
       
    }
 
    sort(v.begin(),v.end());
    // reverse(v.begin(),v.end());
    // reverse(v.begin(),v.end());
     if(n%2==0){
         for(int i=1;i<n;i+=2){
             s=s+v[i];
         }
         cout << s << endl;
     }
     else{
          for(int i=0;i<n;i+=2){
             s=s+v[i];
         }
         cout << s << endl;
     }
    // cout << s << endl;
}
    
 
}
