#include<bits/stdc++.h>
using namespace std;
int main()
{
    int t;
    cin >> t;
    while(t--)
    {
        int n;
        cin >> n;
        vector<int> v(n);
        for(int i=0;i<n;i++)
        {
            cin >> v[i];
        }
        
        sort(v.begin(),v.end());
        if((v[0]+v[n-1])%2==0)
        {
            cout << 0 << endl;
        }
        else
        {
            if(v[0]%2!=0)
            {
                int  s =-1;
                int e = -1 ;
                for(int i=0;i<n;i++)
                {
                    if(v[i]%2==0)
                    {
                        s = i ;
                        break;
                    }
                    else
                    {
                        continue;
                    }
                }
                // cout << s <<  " " << e << endl;
                for(int i=n-1;i>=0;i--)
                {
                     if(v[i]%2!=0)
                     {
                        //  cout << "yes" << endl;
                         e = n-1 - i ;
                         break;
                     }
                }
                                // cout << s <<  " " << e << endl;
 
                if(s!=-1 && e!=-1)
                {
                    cout << min(s,e) << endl;
                }
                else
                {
                    cout << max(s,e) << endl;
                }
            }
            else
            {
                int  s =-1;
                int e = -1 ;
                for(int i=0;i<n;i++)
                {
                    if(v[i]%2!=0)
                    {
                        s = i ;
                        break;
                    }
                    else
                    {
                        continue;
                    }
                }
                for(int i=n-1;i>=0;i--)
                {
                     if(v[i]%2==0)
                     {
                         e = n-1 - i ;
                         break;
                     }
                }
                if(s!=-1 && e!=-1)
                {
                    cout << min(s,e) << endl;
                }
                else
                {
                    cout << max(s,e) << endl;
                }
            }
        }
    }
}
