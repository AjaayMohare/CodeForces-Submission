#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	int t;
	cin >> t;
	while(t--){
	   int n;
	   cin >> n;
	   long long x,y;
	   cin >> x >> y;
	   vector<long long > v(n);
	   for(int i=0;i<n;i++) cin >> v[i];
	   long long ts=0;
	   for(int i=0;i<n;i++){
	       int val = v[i];
	       int ti = v[i]/x;
	       ts+=(ti*y);
	   }
	   long long mx = 0;
	   for(int i=0;i<n;i++){
	       int val = v[i];
	       mx=max(mx,ts + v[i] - ((v[i]/x)*y));
	   }
	   cout << mx << endl;
	}
}
