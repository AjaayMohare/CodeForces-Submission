#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin >> t;
	while(t--){
	  int n;
	  cin >> n;
	  vector<int> v(n);
	  v[0]=0;
	  for(int i=0;i<n;i++){
	      cin >> v[i];
	  }
	  int ans =INT_MIN;
	  sort(v.begin(),v.end());
	  for(int i=0;i<n;i=i+2){
	   ans=max(ans,v[i+1]-v[i])  ; 
	  }
	  cout << ans<< endl;
	  
	}

}
