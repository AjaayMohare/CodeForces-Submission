#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin >> t;
	while(t--){
	    int nn;
	    cin>>nn;
	    vector<int> v(nn);
	    int z=0,n=0;
	    for(int i=0;i<nn;i++){
	        cin >> v[i];
	        if(v[i]==0){
	            z++;
	        }
	        if(v[i]<0){
	            n++;
	        }
	        
	    }
	    int ans = z ;
	    
	    if(n%2==0){
	        ans=ans;
	    }
	    else{
	        ans=ans+ 2;
	    }
	    cout << ans << endl;
	}

}
