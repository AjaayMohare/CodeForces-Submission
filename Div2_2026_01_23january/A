#include <bits/stdc++.h>
using namespace std;
 
int main() {
	// your code goes here
	int t;
	cin >> t;
	while(t--){
	    int n,h,l;
	    cin >> n >> h >> l;
	    vector<int> v(n);
	    for(int i=0;i<n;i++) cin >> v[i];
	    int  mi =min (h,l);
	    int mx = max(h,l);
	    int c1 = 0;
	    int c2=0;
	    for(int i=0;i<n;i++){
	        if(v[i]<=mi) c1++;
	    }
	    for(int i=0;i<n;i++){
	        if(mi<v[i] && v[i] <=mx) c2++;
	    }
	    if(c1>=c2){
	        cout << c2 + (c1-c2)/2 << endl;
	    }
	    else{
	        cout << c1 << endl;
	    }
	    
	}
 
}
